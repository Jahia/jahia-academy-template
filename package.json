{
  "name": "jahia-academy-template",
  "version": "1.0.0",
  "description": "Bootstrap theme for Academy website",
  "scripts": {
    "watch": "sass --watch src/main/resources/scss/bootstrap.scss src/main/resources/css/bootstrap.min.css",
    "build": "sass src/main/resources/scss/bootstrap.scss src/main/resources/css/bootstrap.min.css --style compressed",
    "lint:scss": "stylelint src/**/*.scss",
    "lint:scss:fix": "yarn lint:scss --fix"
  },
  "devDependencies": {
    "postcss": "^8.4.13",
    "sass": "^1.51.0",
    "stylelint": "^14.8.2",
    "stylelint-config-standard-scss": "^3.0.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.0",
    "bootstrap": "^5.2.2"
  }
}
