{
  "name": "jahia-academy-template",
  "version": "1.0.0",
  "description": "Bootstrap theme for Academy website",
  "scripts": {
    "watch": "sass --watch src/main/resources/scss/bootstrap.scss src/main/resources/css/bootstrap.min.css",
    "build:css": "sass src/main/resources/scss/bootstrap.scss src/main/resources/css/bootstrap.min.css --style compressed && postcss src/main/resources/css/bootstrap.min.css --use postcss-mq-optimize cssnano cssnano-preset-advanced --output src/main/resources/css/bootstrap.min.css",
    "build": "npm run build:css",
    "lint:scss": "stylelint src/**/*.scss",
    "lint:scss:fix": "yarn lint:scss --fix"
  },
  "devDependencies": {
    "postcss": "^8.4.41",
    "postcss-cli": "^10.1.0",
    "sass": "^1.77.8",
    "stylelint": "^16.8.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "postcss-cli": "^11.0.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^7.0.5",
    "cssnano-preset-advanced": "^7.0.5",
    "postcss-merge-rules": "^7.0.3",
    "postcss-mq-optimize": "^2.0.1",
    "postcss-reporter": "^7.0.2"
  }
}
